{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom", "es2016", "es2017" ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/",
      "typings/index.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
